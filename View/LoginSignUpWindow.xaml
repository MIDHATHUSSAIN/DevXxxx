<Window x:Class="DevX.View.LoginSignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:LSPage="clr-namespace:DevX.View.Pages"
        xmlns:Finp="clr-namespace:DevX.View.UserControls.FormInputs"
        xmlns:local="clr-namespace:DevX.View"
        
        mc:Ignorable="d"
        Title="LoginSignUpWindow" Height="600" Width="400">
    <Border BorderBrush="Teal" BorderThickness="5"  >
        <Grid Background="CadetBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid  Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition/>

                </Grid.RowDefinitions>
                <Finp:TopHeading HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Top"  Margin="0,0,0,20" TopHeadingTxt="Sign Up" Grid.Row="0"/>
                <LSPage:LoginSignUpForm   Grid.Row="0" Margin="0,30"/>

            </Grid>
        </Grid>
    </Border>
</Window>

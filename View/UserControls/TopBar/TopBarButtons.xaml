<UserControl x:Class="DevX.View.UserControls.TopBar.TopBarButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DevX.View.UserControls.TopBar"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="95"/>
            <ColumnDefinition MaxWidth="95"/>
            <ColumnDefinition MaxWidth="125"/>
            <ColumnDefinition MaxWidth="95"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <dx:SimpleButton Grid.Row="0" Grid.Column="0" Command="{Binding MoveToStudent}" Content="Add Student" Width="92" Height="30" Background="Teal" Foreground="WhiteSmoke" FontWeight="DemiBold"/>
        <dx:SimpleButton Grid.Row="0" Grid.Column="1" Command="{Binding MoveToTeacher}" Content="Add Teacher" Width="92" Height="30" Background="Teal" Foreground="WhiteSmoke" FontWeight="DemiBold"/>
        <dx:SimpleButton Grid.Row="0" Grid.Column="2" Content="Add Announcement" Width="120" Height="30" Padding="0" HorizontalContentAlignment="Center" Background="Teal" Foreground="WhiteSmoke" FontWeight="DemiBold"/>
        <dx:SimpleButton Grid.Row="0" Grid.Column="3" Content="Add Course" Width="92" Height="30" Background="Teal" Foreground="WhiteSmoke" FontWeight="DemiBold"/>
        <dx:SimpleButton Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="3" CornerRadius="60" HorizontalContentAlignment="Center" Padding="0" HorizontalAlignment="Right" Content="Profile" Width="50" Height="48" Background="Teal" Foreground="WhiteSmoke" FontWeight="DemiBold"/>
    </Grid>
</UserControl>

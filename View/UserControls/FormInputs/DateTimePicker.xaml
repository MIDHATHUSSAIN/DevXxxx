<UserControl x:Class="DevX.View.UserControls.FormInputs.DateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DevX.View.UserControls.FormInputs" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             Height="40"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <dxe:DateEdit
    DateTime="{Binding YourDateTimeProperty, Mode=TwoWay}"
    Mask="g"  
            MaskUseAsDisplayFormat="True">
            <dxe:DateEdit.StyleSettings>
                <!-- This setting provides an Outlook-inspired calendar and a time picker in the popup -->
                <dxe:DateEditNavigatorWithTimePickerStyleSettings />
            </dxe:DateEdit.StyleSettings>
        </dxe:DateEdit>
    </Grid>
</UserControl>
<!-- "g" is a standard Date and Time format specifier -->
<UserControl x:Class="DevX.View.Pages.AddNewTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DevX.View.Pages" xmlns:Finp="clr-namespace:DevX.View.UserControls.FormInputs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <!--<RowDefinition/>-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="Add New Teacher" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Finp:InputLabels   MLabelText="Name" />
            <Finp:FormInput  LabelText="Enter Name" HorizontalAlignment="Left" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Finp:InputLabels   MLabelText="Father Name" Margin="10,0,0,0"/>
            <Finp:FormInput  LabelText="Enter Father Name" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0">
            <Finp:InputLabels   MLabelText="Email Address"  />
            <Finp:FormInput  LabelText="Enter Email" />
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <Finp:InputLabels   MLabelText="Phone Number" Margin="10,0,0,0"  />
            <Finp:FormInput  LabelText="Enter Phone Number" Margin="10,0,0,0" />
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0">
            <Finp:InputLabels   MLabelText="Class"  />
            <Finp:FormInput  LabelText="Enter Class" />
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1">
            <Finp:InputLabels   MLabelText="Subjects" Margin="10,0,0,0" />
            <Finp:FormInput  LabelText="Enter Subjects" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel  Grid.Row="4" Grid.Column="0">
            <Finp:InputLabels   MLabelText="Salary"  />
            <Finp:FormInput LabelText="Enter Salary" />
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="1">
            <Finp:InputLabels MLabelText="Joining Date" Margin="10,0,0,0"/>
            <Finp:DateTimePicker Margin="10,0,0,0"/>
        </StackPanel>
        <Finp:SaveButton Grid.Row="5" ButtonContent="Save Teacher" HorizontalAlignment="Right" Grid.ColumnSpan="2" MCommand="{Binding TeacherSaveButton}" />
    </Grid>
</UserControl>

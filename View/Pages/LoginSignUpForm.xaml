<UserControl x:Class="DevX.View.Pages.LoginSignUpForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Finp="clr-namespace:DevX.View.UserControls.FormInputs"
             xmlns:local="clr-namespace:DevX.View.Pages"
             mc:Ignorable="d" 
             Height="400" >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" >
            <Finp:InputLabels MLabelText="Name" FontSize="15" Margin="0,10,0,10"/>
            <Finp:FormInput LabelText="Enter Your Name"  />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Finp:InputLabels MLabelText="Email" FontSize="15" Margin="0,10,0,10"/>
            <Finp:FormInput LabelText="Enter Your Email Address"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" >
            <Finp:InputLabels MLabelText="Password" FontSize="15" Margin="0,10,0,10"/>
            <Finp:FormInput LabelText="Enter Your Password" />
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0">
            <Finp:InputLabels MLabelText="Confirm Password" FontSize="15" Margin="0,10,0,10"/>
            <Finp:FormInput LabelText="Enter Your Confirm Password"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="0"  Margin="0,15,0,0">
            <Finp:SaveButton  Background="Teal" BorderThickness="0" Foreground="White"  ButtonContent="Log in" HorizontalAlignment="Right" />
        </StackPanel>
        <!--<StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Margin="0,15,0,0">
        
  

            <Finp:InputLabels MLabelText="Don't have an account?" VerticalAlignment="Center"/>

            --><!-- The Button Part --><!--
            <Finp:SaveButton ButtonContent="Sign Up" 
                     Background="Transparent" 
                     BorderThickness="0" 
                     Foreground="Teal"
                     Cursor="Hand"
                     Margin="5,0,0,0"
                     VerticalAlignment="Center"/>

        </StackPanel>-->
        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Left">

            <Finp:InputLabels MLabelText="Don't have an account?" VerticalAlignment="Top" Margin="0,8,0,0"/>


            <Finp:SaveButton ButtonContent="Sign Up"  
             Cursor="Hand"
             Margin="0,0,0,10"
                             Padding="0,0,0,0"
                             Width="88"
             VerticalAlignment="Top"  HorizontalContentAlignment="Left" Height="43" RenderTransformOrigin="0.1,0.5" />

        </StackPanel>
    </Grid>
</UserControl>

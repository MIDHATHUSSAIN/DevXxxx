<Window x:Class="DevX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:Finp="clr-namespace:DevX.View.UserControls.FormInputs"
        xmlns:TBar="clr-namespace:DevX.View.UserControls.TopBar"
        xmlns:ATP="clr-namespace:DevX.View.Pages"
        xmlns:local="clr-namespace:DevX" xmlns:viewmodel="clr-namespace:DevX.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:TopBarViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" WindowStartupLocation="CenterScreen" MinHeight="700" Height="700" MinWidth="800" Width="800">
    <Window.DataContext>
        <viewmodel:TopBarViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition MaxHeight="500"/>
            <RowDefinition Height=".6*"/>
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <TBar:TopBarButtons Grid.Row="0" DataContext="{Binding}"/>
        <!--<Frame Content="{Binding CurrentPage}" Grid.Row="1" HorizontalAlignment="Center" />-->
        <ContentControl Content="{Binding CurrentPage}" 
                Grid.Row="1" 
                HorizontalAlignment="Center" />
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <dxg:GridControl Grid.Row="0" 
                 ItemsSource="{Binding Students}" 
                 SelectionMode="Row">

                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="StudentName" Header="First Name"/>
                    <dxg:GridColumn FieldName="StudentId" Header="ID" Width="50" FixedWidth="True"/>
                    <dxg:GridColumn FieldName="StudentEmail" Header="Last Name"/>
                    <dxg:GridColumn FieldName="StudentClass" Header="Email Address"/>
                </dxg:GridControl.Columns>

                <dxg:GridControl.View>
                    <dxg:TableView ShowGroupPanel="False" 
                       AllowEditing="False" 
                       AutoWidth="True"
                       ShowAutoFilterRow="True"
                       />
                </dxg:GridControl.View>
            </dxg:GridControl>


        </Grid>
        <Rectangle Grid.Row="3" Fill="red"/>
    </Grid>
</Window>
